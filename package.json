{
  "name": "discord-voice-recorder-bot",
  "version": "1.0.0",
  "description": "A Discord bot that can join voice channels, record speech, and save it to files with speech recognition capabilities",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=24.1.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:check": "tsc --noEmit --incremental false",
    "deploy": "npm run build && node --env-file=.env dist/util/deploy.js",
    "lint": "prettier --cache --check . && eslint src --ext mjs,js,ts --cache",
    "format": "prettier --cache --write . && eslint src --ext mjs,js,ts --fix --cache",
    "start": "npm run build && node --env-file=.env dist/index.js",
    "dev": "npm run build && node --env-file=.env dist/index.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "discord",
    "bot",
    "voice",
    "recording",
    "speech-recognition"
  ],
  "author": "Discord Voice Bot",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.17.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "libsodium-wrappers": "^0.7.15",
    "node-crc": "^1.3.2",
    "opusscript": "^0.1.1",
    "prism-media": "^2.0.0-alpha.0",
    "sodium-native": "^5.0.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.10",
    "eslint": "^8.57.0",
    "eslint-config-neon": "^0.1.62",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "5.7.3"
  }
}
